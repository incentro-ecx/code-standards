{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@incentro-ic/docs",
  "private": true,
  "license": "Unlicense",
  "type": "module",
  "scripts": {
    "build": "turbo run build:next generate:search",
    "build:next": "next build",
    "clean": "turbo run clean:build clean:cache clean:next clean:turbo --filter=@incentro-ic/docs",
    "clean:build": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:next": "rimraf .next next-env.d.ts",
    "clean:turbo": "rimraf .turbo",
    "format": "turbo run format:eslint format:prettier --filter=@incentro-ic/docs",
    "format:eslint": "eslint . --fix --cache --cache-location node_modules/.cache/eslint",
    "format:prettier": "prettier --write . --cache",
    "generate:search": "pagefind --site dist --output-path dist/_pagefind",
    "generate:types": "next typegen",
    "lint": "turbo run lint:eslint lint:prettier lint:typescript --filter=@incentro-ic/docs",
    "lint:eslint": "eslint . --cache --cache-location node_modules/.cache/eslint",
    "lint:prettier": "prettier --check . --cache",
    "lint:typescript": "tsc --noEmit",
    "serve": "serve dist",
    "start": "next dev"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@icons-pack/react-simple-icons": "^13.8.0",
    "next": "^16.0.7",
    "nextra": "^4.6.0",
    "nextra-theme-docs": "^4.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@incentro-ic/config-eslint": "workspace:^",
    "@incentro-ic/config-prettier": "workspace:^",
    "@incentro-ic/config-typescript": "workspace:^",
    "@types/react": "19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "pagefind": "^1.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "serve": "^14.2.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24"
  }
}
