{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@incentro-ic/config-prettier",
  "version": "3.0.1",
  "description": "A shared Prettier configuration for formatting files.",
  "repository": "https://github.com/incentro-ecx/code-standards",
  "license": "Unlicense",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "src/**",
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "turbo run clean:build clean:cache clean:turbo --filter=@incentro-ic/config-prettier",
    "clean:build": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:turbo": "rimraf .turbo",
    "format": "turbo run format:prettier --filter=@incentro-ic/config-prettier",
    "format:prettier": "prettier --write . --cache",
    "lint": "turbo run lint:prettier --filter=@incentro-ic/config-prettier",
    "lint:prettier": "prettier --check . --cache"
  },
  "dependencies": {
    "prettier-plugin-organize-imports": "^4.3.0",
    "sort-package-json": "^3.6.1"
  },
  "devDependencies": {
    "@incentro-ic/config-typescript": "workspace:^",
    "@types/node": "^24.10.9",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "prettier": "^3.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
