{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@incentro-ic/prettier-config",
  "version": "2.0.0",
  "description": "A shared Prettier configuration for formatting files.",
  "repository": "https://github.com/incentro-ecx/code-standards",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./prettier.config.d.ts",
      "default": "./prettier.config.js"
    }
  },
  "main": "./prettier.config.js",
  "files": [
    "prettier.config.js",
    "prettier.config.d.ts"
  ],
  "scripts": {
    "clean": "pnpm run \"/^clean:.*/\"",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:turbo": "rimraf .turbo",
    "format": "pnpm run \"/^format:.*/\"",
    "format:prettier": "prettier --write . --cache",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:prettier": "prettier --check . --cache"
  },
  "dependencies": {
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "prettier": "^3.6.0"
  }
}
