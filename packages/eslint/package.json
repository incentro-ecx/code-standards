{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@incentro-ic/eslint-config",
  "version": "1.0.3",
  "description": "A shared ESLint configuration for linting files.",
  "repository": "https://github.com/incentro-ic/code-standards",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "files": [
    "src/**",
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "pnpm run \"/^clean:.*/\"",
    "clean:build": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:turbo": "rimraf .turbo",
    "format": "pnpm run \"/^format:.*/\"",
    "format:eslint": "eslint . --fix --cache --cache-location node_modules/.cache/eslint",
    "format:prettier": "prettier --write . --cache",
    "inspect": "eslint --inspect-config",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint . --cache --cache-location node_modules/.cache/eslint",
    "lint:prettier": "prettier --check . --cache"
  },
  "dependencies": {
    "@cspell/eslint-plugin": "^9.2.2",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.38.0",
    "@vitest/eslint-plugin": "^1.4.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "typescript-eslint": "^8.46.2"
  },
  "devDependencies": {
    "@incentro-ic/prettier-config": "workspace:^",
    "@incentro-ic/typescript-config": "workspace:^",
    "@types/node": "^22.18.8",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
