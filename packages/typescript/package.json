{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@incentro-ic/config-typescript",
  "version": "1.0.1",
  "description": "Shared Typescript configurations.",
  "repository": "https://github.com/incentro-ecx/code-standards",
  "license": "Unlicense",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./src/base/tsconfig.json",
    "./app-next": "./src/app-next/tsconfig.json",
    "./package": "./src/package/tsconfig.json",
    "./package-browser": "./src/package-browser/tsconfig.json",
    "./package-node": "./src/package-node/tsconfig.json",
    "./package-react": "./src/package-react/tsconfig.json"
  },
  "main": "./src/base/tsconfig.json",
  "files": [
    "src/**"
  ],
  "scripts": {
    "clean": "pnpm run \"/^clean:.*/\"",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:turbo": "rimraf .turbo",
    "format": "pnpm run \"/^format:.*/\"",
    "format:prettier": "prettier --write . --cache",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:prettier": "prettier --check . --cache"
  },
  "dependencies": {
    "@tsconfig/strictest": "^2.0.7",
    "@types/node": "^24.10.1"
  },
  "devDependencies": {
    "@incentro-ic/config-prettier": "workspace:^",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2"
  }
}
