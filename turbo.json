{
  "$schema": "https://turbo.build/schema.v2.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    },
    "clean:cache": {
      "cache": false
    },
    "clean:turbo": {
      "cache": false
    },
    "format": {
      "dependsOn": ["@incentro-ic/config-eslint#build"]
    },
    "format:eslint": {
      "dependsOn": ["@incentro-ic/config-eslint#build"]
    },
    "format:prettier": {},
    "lint": {
      "dependsOn": ["@incentro-ic/config-eslint#build"]
    },
    "lint:eslint": {
      "dependsOn": ["@incentro-ic/config-eslint#build"]
    },
    "lint:prettier": {},
    "lint:typescript": {},
    "serve": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true
    }
  }
}
