{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    },
    "clean:cache": {
      "cache": false
    },
    "clean:turbo": {
      "cache": false
    },
    "format": {
      "dependsOn": ["@incentro-dc/eslint-config#build"]
    },
    "format:eslint": {
      "dependsOn": ["@incentro-dc/eslint-config#build"]
    },
    "format:prettier": {},
    "lint": {
      "dependsOn": ["@incentro-dc/eslint-config#build"]
    },
    "lint:eslint": {
      "dependsOn": ["@incentro-dc/eslint-config#build"]
    },
    "lint:prettier": {},
    "lint:typescript": {}
  }
}
